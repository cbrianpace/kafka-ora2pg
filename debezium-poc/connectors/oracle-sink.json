{
    "name": "oracle-sink",
    "config": {
        "connector.class": "io.confluent.connect.jdbc.JdbcSinkConnector",
        "tasks.max": "1",
        "topics": "game,team,venue",
        "connection.url": "jdbc:oracle:thin:@oracle:1521/xepdb1",
        "connection.user": "sport",
        "connection.password": "welcome1",
        "auto.create": "false",
        "auto.evolve": "false",
        "insert.mode": "upsert",
        "delete.enabled": "true",
        "pk.mode": "record_key",
        "quote.sql.identifiers": "never",
        "transforms": "topicCase,unwrap,TimestampConverter1,TimestampConverter2",
        "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
        "transforms.unwrap.drop.tombstones": "false",
        "transforms.TimestampConverter1.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
        "transforms.TimestampConverter1.format": "dd-MMM-YY hh:mm:ss.SSS a",
        "transforms.TimestampConverter1.field": "original_date",
        "transforms.TimestampConverter1.target.type": "string",
        "transforms.TimestampConverter2.type": "org.apache.kafka.connect.transforms.TimestampConverter$Value",
        "transforms.TimestampConverter2.format": "dd-MMM-YY hh:mm:ss.SSS a",
        "transforms.TimestampConverter2.field": "game_date",
        "transforms.TimestampConverter2.target.type": "string",
        "transforms.topicCase.type": "com.github.jcustenborder.kafka.connect.transform.common.ChangeTopicCase",
        "transforms.topicCase.from": "LOWER_HYPHEN",
        "transforms.topicCase.to"  : "UPPER_UNDERSCORE"    
    }
}
